# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=raguser
DB_PASSWORD=ragpassword
DB_NAME=ragdb

# JWT Secret (generate a random string)
JWT_SECRET=your-secret-key-change-this-in-production-min-32-chars
AUTH_REFRESH_V1=on
CHAT_HISTORY_V2=on
RAG_LITE_MARKET=on
PUSH_P2P=on

# Server Configuration
PORT=8081

# S3 Configuration (optional)
S3_ENDPOINT=
S3_ACCESS_KEY=
