S3_BUCKET=
S3_REGION=

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key

# Push notifications (FCM/APNs gateway)
FCM_SERVER_KEY=
FCM_SENDER_MODE=auto
FIREBASE_PROJECT_ID=
